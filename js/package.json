{
    "name": "drafter-js-client",
    "private": true,
    "type": "module",
    "scripts": {
        "update": "node scripts/update-skulpt.mjs",
        "build": "tsup --minify --sourcemap",
        "watch": "tsup --watch",
        "precompile": "node scripts/precompile-python.mjs --minify",
        "precompile:watch": "chokidar \"../src/drafter/**/*.py\" \"./src/bridge/**/*.ts\" -d 200 --initial -c \"node scripts/precompile-python.mjs\"",
        "dev": "node scripts/update-skulpt.mjs && tsup --watch --onSuccess \"node scripts/sync-dist.mjs\"",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.1",
        "@types/jquery": "^3.5.33",
        "chokidar": "^4.0.3",
        "chokidar-cli": "^3.0.0",
        "commander": "^14.0.2",
        "dotenv": "^17.2.3",
        "terser": "^5.44.0",
        "tsup": "^8",
        "typescript": "^5"
    },
    "dependencies": {
        "@jest/globals": "^30.2.0",
        "@types/jest": "^30.0.0",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "playwright": "^1.56.1",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2"
    }
}
