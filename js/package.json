{
    "name": "drafter-js-client",
    "private": true,
    "type": "module",
    "scripts": {
        "update": "node scripts/update-skulpt.mjs",
        "build": "tsup --minify --sourcemap",
        "watch": "tsup --watch",
        "precompile": "node scripts/precompile-python.mjs --minify",
        "precompile:watch": "chokidar \"../src/drafter/**/*.py\" \"./src/bridge/**/*.ts\" -d 200 --initial -c \"node scripts/precompile-python.mjs\"",
        "dev": "node scripts/update-skulpt.mjs && tsup --watch --onSuccess \"node scripts/sync-dist.mjs\"",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
    },
    "devDependencies": {
        "@jest/globals": "^29.7.0",
        "@types/jest": "^29.5.14",
        "@types/jquery": "^3.5.33",
        "chokidar": "^4.0.3",
        "chokidar-cli": "^3.0.0",
        "commander": "^14.0.2",
        "dotenv": "^17.2.3",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "terser": "^5.44.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsup": "^8",
        "typescript": "^5"
    }
}
