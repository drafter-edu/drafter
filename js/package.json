{
    "name": "drafter-js-client",
    "private": true,
    "type": "module",
    "scripts": {
        "update": "node scripts/update-skulpt.mjs",
        "build": "tsup --minify --sourcemap",
        "watch": "tsup --watch",
        "precompile": "node scripts/precompile-python.mjs --minify",
        "precompile:watch": "chokidar \"../src/drafter/**/*.py\" \"./src/bridge/**/*.ts\" -d 200 --initial -c \"node scripts/precompile-python.mjs\"",
        "dev": "node scripts/update-skulpt.mjs && tsup --watch --onSuccess \"node scripts/sync-dist.mjs\"",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
    },
    "devDependencies": {
        "@chialab/esbuild-plugin-postcss": "^0.18.0",
        "@jest/globals": "^30.2.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@types/jest": "^30.0.0",
        "@types/jquery": "^3.5.33",
        "@types/node": "^24.10.0",
        "autoprefixer": "^10.4.21",
        "browserslist-to-esbuild": "^2.1.1",
        "chokidar": "^4.0.3",
        "chokidar-cli": "^3.0.0",
        "commander": "^14.0.2",
        "cssnano": "^7.1.2",
        "dotenv": "^17.2.3",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "playwright": "^1.56.1",
        "postcss": "^8.5.6",
        "postcss-preset-env": "^10.4.0",
        "terser": "^5.44.0",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2",
        "tsup": "^8",
        "typescript": "^5"
    },
    "dependencies": {
        "i18next": "^25.6.2",
        "jsx-dom": "^8.1.6",
        "lit": "^3.3.1"
    },
    "browserslist": [
        "defaults",
        "not IE 11",
        "maintained node versions"
    ]
}
