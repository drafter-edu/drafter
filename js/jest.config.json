{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "roots": ["<rootDir>/src", "<rootDir>/tests"],
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/types/**/*"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.ts"],
  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "tsconfig": "tsconfig.json"
    }]
  }
}
